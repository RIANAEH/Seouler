<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/detailItem"
    android:layout_width="match_parent"
    android:layout_height="246dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detailItemImg"
            android:layout_width="240dp"
            android:layout_height="244dp"
            android:layout_marginEnd="171dp"
            android:layout_marginRight="171dp"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detailItemTitle"
            android:layout_width="168dp"
            android:layout_height="26dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detailItemImg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detailItemDescription"
            android:layout_width="168dp"
            android:layout_height="220dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:text="Discription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detailItemImg"
            app:layout_constraintTop_toBottomOf="@+id/detailItemTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>